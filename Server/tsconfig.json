
{
  "compilerOptions": {
    "target": "es5",                                  
    "module": "commonjs",                                
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true ,
    "lib": ["es6"],                     
    "allowJs": true,
    "outDir": "./build",                          
    "rootDir": ".",
    "baseUrl":".",
    "noImplicitAny": true,
    "resolveJsonModule": true,
     "paths": {
            "*": ["node_modules/*", "src/types/*"]
        }
  },
  "include": ["./src/**/*"]

}
